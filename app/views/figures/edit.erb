<h1>Edit <%= @figure.name%></h1>
<form action="/figures/<%=@figure.id%>" method='POST'>
    <input type="hidden" name="_method" value="PATCH">
    <label>Name</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

    <br><br>

    <h3>Edit Titles</h3>
        <% Title.all.each do |title| %>
            <%= title.name %><input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id %>" <%= 'checked' if @figure.titles.include?(title) %> value="<%= title.id %>"><br>
        <% end %>

    <h3>Create New Title:</h3>
    <input type="text" name="title[name]" id="new_title">

    <br><br>

    <h3>Edit Landmarks</h3>
        <% Landmark.all.each do |landmark| %>
            <%= landmark.name %><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %> value="<%= landmark.id %>"><br>
        <% end %>

    <h3>Create New Landmark:</h3>
    <label>Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label>Year:</label>
    <input type="number" name="landmark[year_completed]" id="landmark_year">

    <br><br>
    <input type="submit" value="Edit Figure">

</form>